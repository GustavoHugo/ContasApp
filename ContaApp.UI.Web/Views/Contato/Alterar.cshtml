@model ContaApp.UI.Web.Models.ContatoViewModel

@{
    ViewBag.Title = "Alterar";
}

<h2>Alterar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    

<div class="form-horizontal">
    <h4>Dados do Contato</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.Id)

    <div class="form-text">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-text">
        @Html.LabelFor(model => model.Telefone, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-text">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-text">
        @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select id="Tipo" name="Tipo" class="form-control">

                <option value="1">Pessoa Física</option>
                <option value="2">Pessoa Jurídica</option>

            </select>
        </div>
    </div>



    <div id="pjContainer" style="display:none">
        <div class="form-text">
            @Html.LabelFor(model => model.CNPJ, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CNPJ, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

    </div>

    <div id="pfContainer">

        <div class="form-text">
            @Html.LabelFor(model => model.CPF, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-text">
            @Html.LabelFor(model => model.RG, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RG, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-text">
            @Html.LabelFor(model => model.DataNascimento, "Data de Nascimento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataNascimento, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>

    <div class="form-text">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Alterar" class="btn btn-outline-primary" />
            <a href='@Url.Action("Inicio")' class="btn btn-outline-secondary">Voltar</a>
        </div>
    </div>
</div>
}
@section Scripts{

    <script>
        $(function () {
            $('#Tipo').change(function () {

                var el = $(this);
                var value = el.val();

                if (value == "1") {
                    $('#pfContainer').show();
                    $('#pjContainer').hide();
                }
                else
                {
                    $('#pfContainer').hide();
                    $('#pjContainer').show();
                }

            });

        });

    </script>


}
